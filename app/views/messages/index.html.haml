                .contents__chat-side--groups__group__group-name
                    test-group
                .contents__chat-side--groups__group__latest-message
                    Good night
    .contents__chat-main
        .contents__chat-main--main-header
            .contents__chat-main--main-header__left-box
                .contents__chat-main--main-header__left-box__current-group
                    sample
                .contents__chat-main--main-header__left-box__member-list
                    Member : 
                    .contents__chat-main--main-header__left-box__member-list__member
                        seo 
                    .contents__chat-main--main-header__left-box__member-list__member    
                        neko
            .contents__chat-main--main-header__edit-btn
                Edit
        .contents__chat-main--messages
            .contents__chat-main--messages__message
                .contents__chat-main--messages__message__upper-info
                    .contents__chat-main--messages__message__upper-info__talker
                        seo 
