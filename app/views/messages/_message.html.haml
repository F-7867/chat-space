.message{"data-message_id": "#{message.id}"}
    .upper-info
        .upper-info__talker
            = message.user.name
        .upper-info__date    
            = message.created_at.strftime("%Y/%m/%d(%a) %H:%M")
    .text   
        - if message.content.present?
            %p.text__content
                = message.content
        = image_tag message.image.url, class: 'text__image' if message.image.present?